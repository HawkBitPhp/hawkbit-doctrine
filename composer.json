{
  "name": "hawkbit/persistence",
  "type": "library",
  "description": "Doctrine 2 ORM integration for Hawkbit PSR-7 Micro PHP framework",
  "keywords": [
    "doctrine",
    "orm",
    "persistence",
    "hawkbit"
  ],
  "homepage": "https://github.com/HawkBitPhP",
  "license": "MIT",
  "authors": [
    {
      "name": "Marco Bunge",
      "email": "marco_bunge@web.de"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "doctrine/orm": "~2.5",
    "dasprid/container-interop-doctrine": "^0.2",
    "hawkbit/hawkbit": "~2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.8"
  },
  "autoload": {
    "psr-4": {
      "Hawkbit\\Doctrine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hawkbit\\Doctrine\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "cd vendor/phpunit/phpunit",
      "phpunit --configuration phpunit.xml"
    ]
  }
}
